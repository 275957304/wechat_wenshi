<view class="container">
    <view class='login_tip'>
        <view>登录</view>
        <view>login</view>
    </view>
    
    <view class='login-list' hidden="{{loginSelect}}">
        <form bindsubmit="userLogin">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">账户:</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" bindinput="bindName" name="username" placeholder="请输入登录账户"/>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">密码:</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" bindinput="bindPassword" password  name="password" placeholder="请输入登录密码"/>
                </view>
            </view>
            <view class='login-btn'>
                <button disabled="{{userStatus.disabled}}" loading="{{loading}}" style='{{userStatus.btnStyle}}' class="btn" formType="submit">确定</button>
            </view>
        </form>
    </view>
    <!-- 手机登录 -->
    <view class='login-list' hidden="{{!loginSelect}}">
        <form bindsubmit="mobileLogin">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">手机号码:</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" style='width:140rpx'  name="mobile" placeholder="请输入手机号码"/>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label" style='width:140rpx'>验证码:</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input"  name="code" placeholder="请输入短信验证码"/>
                </view>
                <view class="obtain-btn">获取</view>
            </view>
            <view class='login-btn'>
                <button  class="btn" formType="submit">确定</button>
            </view>
        </form>
    </view>


    <view class='login_foot' bindtap="tabLogin">{{isPhoneLogin ? '切换为账号登录' : '切换为手机登录'}}</view>
</view>