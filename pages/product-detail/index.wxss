.container{
    background: #fff;
}
.swiper-container{
  width: 100%;
  position: relative;  
}
.swiper_box {
  width: 100%;
  height:600rpx;
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height:600rpx;
}

.detail-head{
    background: #f8f8f8;
    padding: 30rpx;
    margin-bottom: 20rpx;
}
.price{
    color: #ff5050;
    font-size: 36rpx;
    font-weight: bold;
    margin: 15rpx 0;
}
.sold {
    color: #aaa;
}
.detail-cnt{
    margin-bottom: 100rpx;
}
.cnt-tit{
    height: 88rpx;
    line-height: 88rpx;
    font-size: 40rpx;
    text-align: center;
    background: #f8f8f8;
}

.foot{
    height: 98rpx;
    border-top: 2rpx solid #f0f0f0;
    background: #fff;
    position: fixed;
    bottom: 0;
    width: 100%;
    z-index: 500;
    display: flex;
}
.foot-item{
    flex: 1;
    text-align: center;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);  
}
.icon{
    display: block;
    margin: 15rpx auto 5rpx;
    width: 36rpx;
    height: 28rpx;   
}