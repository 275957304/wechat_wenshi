@import '../../style/weui.wxss';
.weui-search-bar{
    padding: 0;    
    border: none;
    background: transparent;
}
.weui-search-bar__form {
    border: none;
    background: #fff;
    height: 56rpx;
    line-height: 56rpx;
    border-radius: 12rpx;
    overflow: hidden;
    border: 2rpx solid #cdcdcd;
}
.weui-search-bar__box{
    padding: 0 20px;
}
.search-area{
    position: absolute;
    right: 20rpx;
    top: 3rpx;
    z-index: 10;
    width: 50rpx;
    height: 50rpx;
    text-align: center;
    overflow: hidden;
}
.search-icon{
    display: inline-block;
    margin-top: 7rpx;
}