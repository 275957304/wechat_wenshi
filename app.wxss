/**app.wxss**/
@import 'style/weui.wxss';
page{
    font-size: 30rpx;
    color: #4a4a4a;
    line-height: 45rpx;
    height: 100%;
}
.container {
  height: 100%;  
  box-sizing: border-box;
  background: #f2f2f2;

}
.search{
    width: 100%;
    height: 68rpx;
    overflow: hidden;
}
.fl{
    float: left;
}
.fr{
    float: right;
}
.live{
    color: #fe8c13;
}

.gary{
    color: #666;
}
.light{
    color: #999;
}

.fg{
    font-size: 36rpx;
}
.fs{
    font-size: 24rpx;
}
.mt10{
    margin-top: 10rpx;
}
.mt15{
    margin-top: 15rpx;
}
.mt20{
    margin-top: 20rpx;
}
.pt10{
    padding-top: 10rpx;
}
.pt15{
    padding-top: 15rpx;
}
.pt20{
    padding-top: 20rpx
}

.dimg{
    display: block;
    width: 100%;
    height: 100%;
}
.foot-panel{
  height: 160rpx;
}
.foot{
    position: fixed;
    bottom: 0;
    background: #fff;
    width: 100%;
    left: 0;
    display: flex;
    padding: 30rpx;
}
.foot-item{
    flex: 1;
    text-align: center;
}
.foot-link{
    display: inline-block;
    border: 2rpx solid #fe8c13;
    line-height: 100rpx;
    padding: 0 70rpx;
    border-radius: 20rpx;
    color: red;
    font-size: 34rpx;
}