/**app.wxss**/
@import 'style/weui.wxss';
page{
    font-size: 30rpx;
    color: #4a4a4a;
    line-height: 45rpx;
    height: 100%;
}
.container {
  height: 100%;  
  box-sizing: border-box;
  background: #f2f2f2;
}
.cl{zoom:1}
.cl:after{clear:both;display:block;visibility:hidden;height:0;content:'\0020'}
.white_bg{
    background: #fff;
}
.search{
    width: 100%;
    height: 68rpx;
    overflow: hidden;
}
.fl{
    float: left;
}
.fr{
    float: right;
}
.live{
    color: #fe8c13;
}
.red{
    color: #f77b72;
}
.gary{
    color: #666;
}
.light{
    color: #999;
}

.fg{
    font-size: 36rpx;
}
.fs{
    font-size: 24rpx;
}
.mt10{
    margin-top: 10rpx;
}
.mt15{
    margin-top: 15rpx;
}
.mt20{
    margin-top: 20rpx;
}
.mb10{
    margin-bottom: 10rpx;
}
.pt10{
    padding-top: 10rpx;
}
.pt15{
    padding-top: 15rpx;
}
.pt20{
    padding-top: 20rpx
}
.p20{
    padding: 20rpx;
}
.p30{
    padding: 30rpx;
}

.dimg{
    display: block;
    width: 100%;
    height: 100%;
}

.foot-panel{
  height: 200rpx;
}
.foot{
    position: fixed;
    bottom: 0;
    background: #fff;
    width: 100%;
    left: 0;
    display: flex;
    padding:48rpx 0;
}
.foot-item{
    flex: 1;
    text-align: center;
}
.foot-link{
    display: inline-block;
    border: 2rpx solid #e5e5e5;
    line-height: 96rpx;
    padding: 0 70rpx;
    border-radius: 10rpx;
    color: #e5e5e5;
    font-size: 34rpx;
}
.foot-cancel{
    border-color: #b65777;
    color: #b65777;
}
.foot-save{
    border-color: #e91e63;
    color: #eb3472;
}
.tab_panel{
    height: 98rpx;
}
.tabbar{
    border-top: 2rpx solid #f0f0f0;
    display: flex;
    position: fixed;
    bottom: 0;
    z-index: 500;
    width: 100%;
    background: #fff;
    text-align: center;
}
.tabbar_item{
    flex: 1;
    height: 96rpx;
    padding: 12rpx 0 0 0;
    box-sizing: border-box;
    font-size: 24rpx;
}
.tab_icon{
    display: block;
    margin: 0 auto;
    width: 40rpx;
    height: 40rpx;
}

.textarea_box{
    border: 2rpx solid #cdcdcd;
    padding: 10rpx;
    height: 230rpx;
    box-sizing: border-box;
}
.weui-uploader__bd{
  padding:0 30rpx;
}